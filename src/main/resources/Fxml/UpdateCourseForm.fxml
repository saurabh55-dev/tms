<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.saurabh.trainingmanagementsystem.Controllers.UpdateCourseFormController" spacing="10.0" alignment="CENTER" prefWidth="300.0">
    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>

    <GridPane hgap="10.0" vgap="10.0">
        <Label text="Course Title:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="courseTitleField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Duration:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="durationField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Fees:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="feesField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    </GridPane>

    <Button text="Save" onAction="#handleSaveButtonAction"/>
</VBox>