<AnchorPane prefHeight="700.0" prefWidth="750.0" stylesheets="@../Styles/ChangePassword.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.saurabh.trainingmanagementsystem.Controllers.ChangePasswordController">
    <VBox layoutX="166.0" layoutY="135.0" prefHeight="430.0" prefWidth="419.0" styleClass="login_form_container" AnchorPane.rightAnchor="165.0" AnchorPane.topAnchor="135.0">
        <Label fx:id="title_label" alignment="CENTER" prefHeight="35.0" prefWidth="242.0" text="Change Password">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
            <VBox.margin>
                <Insets left="100.0" top="20.0" />
            </VBox.margin></Label>
        <Label text="Enter New Password:">
         <VBox.margin>
            <Insets left="10.0" />
         </VBox.margin></Label>
      <PasswordField fx:id="password_field1" layoutX="10.0" layoutY="99.0" styleClass="input_field">
         <VBox.margin>
            <Insets left="50.0" right="10.0" />
         </VBox.margin>
      </PasswordField>
        <Label text="Re-Enter New Password:">
         <VBox.margin>
            <Insets left="10.0" />
         </VBox.margin></Label>
        <PasswordField fx:id="password_field2" styleClass="input_field">
         <VBox.margin>
            <Insets left="50.0" right="10.0" />
         </VBox.margin></PasswordField>
        <Button fx:id="change_pwd_btn" mnemonicParsing="false" text="Change Password">
            <VBox.margin>
                <Insets left="90.0" top="10.0" />
            </VBox.margin></Button>
        <Label fx:id="error_lbl" styleClass="error_lbl">
         <VBox.margin>
            <Insets left="10.0" />
         </VBox.margin></Label>
    </VBox>

</AnchorPane>
