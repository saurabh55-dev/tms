<AnchorPane fx:id="main_container" prefHeight="700.0" prefWidth="750.0" stylesheets="@../Styles/AddCourse.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.saurabh.trainingmanagementsystem.Controllers.AddCourseController">
   <VBox alignment="CENTER" layoutX="223.0" layoutY="120.0" prefHeight="461.0" prefWidth="305.0">
      <children>
          <HBox alignment="CENTER" prefHeight="47.0" prefWidth="305.0">
