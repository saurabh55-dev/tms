<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefWidth="300.0" spacing="10.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.saurabh.trainingmanagementsystem.Controllers.UpdateClassFormController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Label text="Note: Time should be in format (HH:MM)" />

    <GridPane hgap="10.0" vgap="10.0">
        <Label text="Start Time:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="startTimeField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label text="End Time:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField fx:id="endTimeField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      <columnConstraints>
         <ColumnConstraints />
         <ColumnConstraints />
      </columnConstraints>
      <rowConstraints>
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
      </rowConstraints>
    </GridPane>

    <Button onAction="#handleSaveButtonAction" text="Save" />
</VBox>
