<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox fx:id="updateForm" prefWidth="300.0" spacing="10" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.saurabh.trainingmanagementsystem.Controllers.UpdateStudentFormController">
    <Label text="Update Student" textAlignment="CENTER">
      <font>
         <Font name="System Bold" size="16.0" />
      </font>
      <padding>
         <Insets left="80.0" />
      </padding></Label>
    <Label text="Name:" />
    <TextField fx:id="nameField" />
    <Label text="Email:" />
    <TextField fx:id="emailField" />
    <Label text="Address:" />
    <TextField fx:id="addressField" />
    <Label text="Phone:" />
    <TextField fx:id="phoneField" />
    <HBox alignment="CENTER" spacing="10">
        <Button onAction="#handleSaveButtonAction" text="Save" />
        <Button onAction="#handleCancelButtonAction" text="Cancel" />
    </HBox>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
